function remover(n){
	
    document.getElementById("tabela").deleteRow(1);
  	produtos.splice(n, 1);
    

}

for(var i = 0; i < produtos.length; i++){
	let buffer = ""
	buffer += "<thead><td>"+i+"</td><td>"+produtos[i]['nome']+"</td><td>"+produtos[i]["preco"]+"</td><td><button onclick='remover("+i+")'>Remover</button></td><thead>"
	document.getElementById('tabela').innerHTML += buffer;


}



